<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="extentReports.ExtentReportListener"/>
         <listener class-name="io.qameta.allure.testng.AllureTestNG" />
    </listeners>
    <test name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testNgTests.DataStructures"/>
            <class name="testNgTests.StackTest"/>
            <class name="testNgTests.Graph"/>
            <class name="testNgTests.TreeTest"/>
            <class name="testNgTests.QueueTest"/>
            <class name="testNgTests.Registration"/>
            <class name="testNgTests.ArraysTest"/>
            <class name="testNgTests.LoginTest"/>
            <class name="testNgTests.HomeTest"/>
        </classes>    
    </test>
    <test name="EdgeTest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="testNgTests.DataStructures"/>
            <class name="testNgTests.StackTest"/>
            <class name="testNgTests.Graph"/>
            <class name="testNgTests.TreeTest"/>
            <class name="testNgTests.QueueTest"/>
            <class name="testNgTests.Registration"/>
            <class name="testNgTests.ArraysTest"/>
            <class name="testNgTests.LoginTest"/>
            <class name="testNgTests.HomeTest"/>
        </classes>
    </test>
    <test name="FireFoxTest">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testNgTests.DataStructures"/>
            <class name="testNgTests.StackTest"/>
            <class name="testNgTests.Graph"/>
            <class name="testNgTests.TreeTest"/>
            <class name="testNgTests.QueueTest"/>
            <class name="testNgTests.Registration"/>
            <class name="testNgTests.ArraysTest"/>
            <class name="testNgTests.LoginTest"/>
            <class name="testNgTests.HomeTest"/>
        </classes>
    </test>
</suite>
